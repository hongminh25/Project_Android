<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.dashboard.DashboardFragment">


    <Button
        android:id="@+id/button_DonVi"
        android:layout_width="match_parent"

        android:text="Đơn vị đo"
        android:layout_height="60dp"
        android:textAlignment="textStart"
        android:background="#fff"
        android:paddingLeft="30sp"
        android:layout_marginTop="3dp"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_NgonNgu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="textStart"
        android:background="#fff"
        android:paddingLeft="30sp"
        android:layout_marginTop="3dp"
        android:text="Ngôn ngữ"
        app:layout_constraintTop_toBottomOf="@+id/button_DonVi"
         />
    <Button
        android:id="@+id/button_DoiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="textStart"
        android:background="#fff"
        android:layout_marginTop="3dp"
        android:paddingLeft="30sp"
        android:text="Đổi mật khẩu"
        app:layout_constraintTop_toBottomOf="@+id/button_NgonNgu"
        />
    <Button
        android:id="@+id/button_ThongTinPhanMem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="textStart"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:paddingLeft="30sp"
        android:text="Thông tin phần mềm"
        app:layout_constraintTop_toBottomOf="@+id/button_DoiMatKhau"
        />
    <Button
        android:id="@+id/button_DangXuat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="textStart"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:paddingLeft="30sp"
        android:text="Đăng xuất"
        app:layout_constraintTop_toBottomOf="@+id/button_ThongTinPhanMem"
        />


</android.support.constraint.ConstraintLayout>